@model  IEnumerable<TMP.Models.InvoiceTransactionModel>
@if (Model.Count() > 0)
{
    <div class="tab-pane" id="4a">
        <div class="col-md-12" style="height:10px;"></div>
        <div class="col-md-12">
            <table id="example" class="display" cellspacing="0" width="91%">
                <thead>
                    <tr class="bgspr">
                        <th>Select</th>
                        <th>Insurance Name</th>
                        <th>Policy Number</th>
                        <th>Insurance Broker</th>
                        <th>Insured Amount</th>
                        <th>Premium %</th>
                        <th>Premium Amount</th>
                        <th>Comment</th>
                    </tr>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td><input type="radio" name="radio" value="@item.InvoiceInsID" checked></td>
                            <td>@item.InsuranceName</td>
                            <td>@item.PolicyNo</td>
                            <td>@item.InsuranceBrokerName</td>
                            <td>@item.CurrencyCode @string.Format("{0:0,0.00}", item.InsAmt)</td>
                            <td>@string.Format("{0:0,0.00}", item.PremPer)</td>
                            <td>@item.CurrencyCode @string.Format("{0:0,0.00}", item.PremAmt)</td>
                            <td>@item.Comment</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
}
<script>
    $(document).ready(function () {
        $('#example').DataTable({
        });
    });
</script>

<style>
    .dataTables_filter {
        display: none;
    }
</style>



