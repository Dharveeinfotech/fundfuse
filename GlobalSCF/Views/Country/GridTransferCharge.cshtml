@model  IEnumerable<TMP.Models.CountryMaster>
@if (Model.Count() > 0)
{
    <div class="tab-pane" id="4a">
        <!--tab 4a-->
        <div class="col-md-12" style="height:10px;"></div>
        <div class="col-md-12">
            <table id="example" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr class="bgspr">
                        <th style="width:60px;">Sr. No.</th>
                        <th>Country Name</th>
                        <th>Transaction Currency Code</th>
                        <th>Charge Currency Code</th>
                        <th>Fee %</th>
                        <th>Fee Amount</th>
                        <th>Edit</th> 
                        <th>Delete</th>                        
                    </tr>
                <tbody>
                    @{int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@i</td>
                            <td>@item.CountryName</td>
                            <td>@item.CurrencyCode</td>
                            <td>@item.ConvCurrencyCode</td>
                            <td>@string.Format("{0:0,0.00}", item.FeePer)</td>
                            <td>@item.CurrencyCode @string.Format("{0:0,0.00}", item.FeeAmt)</td>        
                            <td>@Html.ActionLink("Edit", "TransferChargeMaster", new { TransChargeID = item.TransChargeID })</td>                    
                            <td>@Html.ActionLink("Delete", "TransferChargeMaster", new { DeleteID = item.TransChargeID })</td>                    
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
        </div>
    </div>
                        }
<script>
    $(document).ready(function () {
        $('#example').DataTable({
            "pageLength": 5,
        });
    });
</script>

<style>
    .dataTables_filter {
        display: none;
    }
</style>