@model  IEnumerable<TMP.Models.CustomerMasterModel>
<div class="col-md-12 div-border-multitab padoff">
    <div class="col-md-12" style="height:10px;"></div>
    <div class="col-md-12">
        <table id="exampleRemarks" class="display" cellspacing="0" width="100%">
            <thead>
                <tr class="bgspr">
                    <th>User Name</th>
                    <th>Action</th>
                    <th>Comment Date</th>
                    <th>Remarks</th>
                </tr>
                @if (Model.Count() > 0)
                {
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.LoginName</td>
                            <td>@item.ActionLevel</td>
                            <td>@(string.Format("{0:dd-MMM-yyyy hh:mm:ss tt}", item.ProcessDate))
                            <td>@item.ProcessRemark</td>
                        </tr>
                    }
                </tbody>
                }
            </table>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#exampleRemarks').DataTable({
                "pageLength": 10,
            });
        });
    </script>
