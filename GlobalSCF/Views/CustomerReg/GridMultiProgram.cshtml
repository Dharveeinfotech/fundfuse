@model  IEnumerable<TMP.Models.CustomerVerifyModel>
@if (Model.Count() > 0)
{
    <div class="tab-pane" id="4a">
        <!--tab 4a-->
        <div class="col-md-12" style="height:10px;"></div>
        <div class="col-md-12">
            <table id="example2" class="display" cellspacing="0" width="99%">
                <thead>
                    <tr class="bgspr">
                        <th>Buyer Code</th>
                        <th>Buyer Name</th>
                        <th>Program Code</th>
                    </tr>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CustomerCode</td>
                            <td>@item.CompanyName</td>
                            <td>@item.ProgramCode</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
    <style>
        .dataTables_info {
            display: none;
        }
        .dataTables_paginate {
            display: none;
        }
    </style>
}
<script>
    $(document).ready(function () {
        $('#example2').DataTable({
            "pageLength": 5,
        });
    });
</script>

<style>
    .dataTables_filter {
        display: none;
    }
</style>




