@model TMP.Models.FAQ
@{
    ViewBag.Title = "Create FAQ";
    Layout = "~/Views/MasterPage/_defaultLayout.cshtml";

}
<div class="col-sm-12 div-border padoff">
    @if (ViewBag.ErrorMessage != null)
    {
        <label style="color:red;">@ViewBag.ErrorMessage</label>
    }
    <div class="col-md-12" style="height:10px;"></div>
    <form method="post" id="SRForm" enctype="multipart/form-data">
        <div class="form-group">
            <div class="col-sm-12">
                <label class="col-sm-2" for="name">Type Name&nbsp;<span style="color:red;width:50px;">*</span></label>
                <div class="col-sm-6">
                    @Html.DropDownList("CustomerTypeID", null, "--  Select  --", new { @class = "form-control validate[required]" })
                </div>
            </div>
        </div>
        <div class="col-md-12" style="height:10px;"></div>
        <div class="form-group">
            <div class="col-sm-12">
                <label class="col-sm-2" for="name">Question&nbsp;<span style="color:red;width:50px;">*</span></label>
                <div class="col-sm-6">
                    <textarea class="col-sm-12  form-control validate[required]" id="Questions" name="Questions" cols="1" rows="1" maxlength="500" autocomplete="off">@Model.Questions</textarea>
                </div>
            </div>
        </div>
        <div class="col-md-12" style="height:10px;"></div>
        <div class="form-group">
            <div class="col-sm-12">
                <label class="col-sm-2" for="name">Answer&nbsp;<span style="color:red;width:50px;">*</span></label>
                <div class="col-sm-6">
                    <textarea class="col-sm-12  form-control validate[required]" id="Answer" name="Answer" cols="1" rows="3" maxlength="500" autocomplete="off">@Model.Answer</textarea>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                @if (Model.FaqID != 0)
            {
                    <label class="col-sm-2" for="name">IsActive&nbsp;<span style="color:red;width:50px;">*</span></label>
                    <div class="col-sm-3">
                        @if (Model.IsActive == false)
                        {
                            <input type="checkbox" class="chkbox" name="IsActive" id="IsActive">
                        }
                        else
                        {
                            <input type="checkbox" checked="checked" class="chkbox" name="IsActive" id="IsActive">
                        }
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <div class="col-sm-2">
                </div>
                <div class="col-sm-10">
                    <button id="Submit" name="Submit" class="btn-tgs" formnovalidate>Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script type="text/javascript">
    $("#Submit").on("click", function () {

        $("#SRForm").validationEngine('attach', {
            promptPosition: "bottomLeft",
            scroll: false,
            autoHidePrompt: true,
            autoHideDelay: 3500,
            fadeDuration: 0.3,
            focusFirstField: false,
            MaxErrorsPerField: 1
        });

    });
</script>
