        position: absolute;
        top: 50%;
        left: 50%;
        z-index: 100;
    }
     .scroll {    
    min-height: 375px;
}
</style>

<script>

    $(document).ready(function () {
        $("#amend").on("click", function () {
            $("#UMPAForm").validationEngine('attach', {
                promptPosition: "bottomLeft",
                scroll: false,
                autoHidePrompt: true,
                autoHideDelay: 3500,
                fadeDuration: 0.3,
                focusFirstField: false,
                MaxErrorsPerField: 1
            });

        });


        $("#approve").on("click", function () {
            $("#UMPAForm").validationEngine('detach');
        });
    });

    function ViewDetail(id) {
        $('#loading').show();
        var str = id.split('_');
        var roleid = str[1];// document.getElementById(id).value;
        $.ajax({
            //url: "/mRoleMasters/View",
            //url: "/mUserMasters/UserRoleRightsView",
            url: "/mRoleMasters/RoleView",
            type: "POST",
            data: "{RoleId:'" + roleid + "'}",
            datatype: "json",
            contentType: "application/json; charset=utf-8",
            //contentType: "application/x-www-form-urlencoded; charset=UTF-8",
            success: function (result) {
                if (result == 'Roles not exist.') {
                    
                    $("#errorMsg").html(result);
                    $('#Error').modal('show');
                    //Remove Iamge
                }
                else {
                    $('#myModalContent').html(result);
                    $('#myModal').modal('show');
                    //$("#NEW1").html(result);
                    $('#loading').hide();
                    ShowDialog(true);
                }
                $('#loading').hide();
                return false;
            },
            error: function () {
                $('#loading').hide();
                
            }
        });
    }
    
    function ShowDialog(modal) {
        $("#overlay").show();
        $("#dialog").fadeIn(300);

        if (modal) {
            $("#overlay").unbind("click");
        }
        else {
            $("#overlay").click(function (e) {
                HideDialog();
            });
        }
    }

    function HideDialog() {
        $("#overlay").hide();
        $("#dialog").fadeOut(300);
    }
</script>