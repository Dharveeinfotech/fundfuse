<script type="text/javascript">
    $(document).ready(function () {
        $("#amend").on("click", function () {
            $("#HTMLFORM").validationEngine('attach', {
                promptPosition: "bottomLeft",
                scroll: false,
                autoHidePrompt: true,
                autoHideDelay: 3500,
                fadeDuration: 0.3,
                focusFirstField: false,
                MaxErrorsPerField: 1
            });

        });

        $("#approve").on("click", function () {
            $("#HTMLFORM").validationEngine('detach');
        });
        $("#tinyText").attr("disabled", "disabled");
        var a = $('#issmsvalue').val();

        if (a == "SMS") {
            $('#SMSText').show();
            $("#tinyText").hide();
            $(".mceEditor").hide();
            $("#mceu_13").hide();
            var b = $('#SMSText').val();
            $('#SMSText').html(b);
        }
        else if (a == "Email") {
            $("#tinyText").show();
            $('#SMSText').hide();
            $(".mceEditor").show();
            $("#mceu_13").show();
            var b = $('#tinyText').val();
            var cd = $(b).text().replace(/\[this\]/g, '<b>')
            $('#tinyText').html(b);
        }
        else if (a == "Memo") {
            $("#tinyText").show();
            $('#SMSText').hide();
            $(".mceEditor").show();
            $("#mceu_13").show();
            var b = $('#tinyText').val();
            var cd = $(b).text().replace(/\[this\]/g, '<b>')
            $('#tinyText').html(b);
        }
        $("#tinyText").attr("disabled", "disabled");
    });
</script>
