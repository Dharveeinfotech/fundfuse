@model  IEnumerable<TMP.Models.CustomerInfoModel>
@if (Model.Count() > 0)
{
    <div class="tab-pane" id="4a">
        <!--tab 4a-->
        <div class="col-md-12" style="height:10px;"></div>
        <div class="col-md-12">
            <table id="example1" class="display" cellspacing="0" width="100%">
                <thead>
                    <tr class="bgspr">
                        <th>Bank Name</th>
                        <th>Facility Type</th>
                        <th>Currency</th>
                        <th>Facility Limit</th>
                        <th>Utilization</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                <tbody>
                    @foreach (var item in Model)
                {
                        <tr>
                            <td>@item.BankName</td>
                            <td>@item.FacType</td>
                            <td>@item.CurrencyCode</td>
                            <td>@item.CurrencyCode @string.Format("{0:0,0.00}", item.FacLimit)</td>
                            <td>@item.CurrencyCode @string.Format("{0:0,0.00}", item.FacUtilize)</td>
                            <td>@Html.ActionLink("Edit", "CompanyMoreInfo", new { CustomerID = item.CustomerID, CustomerTypeID = item.CustomerTypeID, Ccid = item.CustomerCreditID, did = 0, Cbid=0, status = item.Status })</td>
                            <td>@Html.ActionLink("Delete", "CompanyMoreInfo", new { CustomerID = item.CustomerID, CustomerTypeID = item.CustomerTypeID, Cdid = item.CustomerCreditID,did=0, Ccid=0,Cbid = 0, status = item.Status })</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
}
<script>
    $(document).ready(function () {
        $('#example1').DataTable({
            "pageLength": 5,
        });
     });
</script>

<style>
    .dataTables_filter {
        display: none;
    }
</style>

