                    }
                </div>
            }

            <div class="col-md-1"></div>

            <label class="col-md-2" for="textinput">Mobile Number&nbsp;<span style="color:red;width:50px;"></span></label>
            <div class="col-md-3">
                @if (ViewBag.CustCheck.MobileNo == Model.MobileNo)
                {
                    @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control" })
                }
                else
                {
                    @Html.TextBoxFor(model => model.MobileNo, new { @class = "form-control changes-input", title = @ViewBag.CustCheck.MobileNo })
                }
            </div>

        </div>
       

        <div class="col-md-12" style="height:10px;"></div>
        <div class="form-group">
            <label class="col-md-2" for="textinput">E-Mail&nbsp;<span style="color:red;width:50px;"></span></label>
            <div class="col-md-3">
                @if (ViewBag.CustCheck.EmailID == Model.EmailID)
                {
                    @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control" })
                }
                else
                {
                    @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control changes-input", title = @ViewBag.CustCheck.EmailID })
                }
            </div>
            <div class="col-md-1"></div>

        </div>
        <div class="col-md-12" style="height:10px;"></div>


        <div class="col-md-12" style="text-align:right">
            @Html.HiddenFor(x => x.CustomerID)
            @Html.HiddenFor(x => x.CustomerTypeID)
            @Html.HiddenFor(x => x.Status)
            <button id="Next" name="Next" value="Next" type="submit" class="btn CommonAttachValidation btn-tgs">Next</button>
        </div>
    }
</div>
<script>
    $('.form-control').attr('readonly', 'true');

</script>