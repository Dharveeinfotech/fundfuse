                    {
                        @Html.TextBoxFor(model => model.DesignationName, new { @class = "form-control changes-input", title = @ViewBag.CustCheck.DesignationName })
                    }
                </div>
            }
            else
            {
                <label class="col-md-2" for="textinput">Other Designation in the Company&nbsp;<span style="color:red;width:50px;"></span></label>
                <div class="col-md-3">
                    @if (ViewBag.CustCheck.OtherDesignation == Model.OtherDesignation)
                    {
                        @Html.TextBoxFor(model => model.OtherDesignation, new { @class = "form-control" })
                    }
                    else
                    {
